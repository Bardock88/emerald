	<style name="AppTheme.Light" parent="@android:style/Theme.Holo.Light.NoActionBar">
		<item name="launcherTextColor">@android:color/white</item>
		<item name="launcherTextShadowColor">@color/lightTextShadow</item>
		<item name="drawableMenu">@drawable/menu_bg</item>
		<item name="drawableSearch">@drawable/search_bg</item>
		<item name="drawableWebSearch">@drawable/web_search_bg</item>
	</style>
	<style name="AppTheme.Dark" parent="@android:style/Theme.Holo.NoActionBar">
	<item name="launcherTextColor">@android:color/black</item>
	<item name="launcherTextShadowColor">@color/darkTextShadow</item>
		<item name="drawableMenu">@drawable/menu_dark_bg</item>
		<item name="drawableSearch">@drawable/search_dark_bg</item>
		<item name="drawableWebSearch">@drawable/web_search_dark_bg</item>
	</style>
	<style name="AppTheme.Dark.Wallpaper" parent="AppTheme.Dark">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowShowWallpaper">true</item>
	</style>
	<style name="AppTheme.Light.Wallpaper" parent="AppTheme.Light">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowShowWallpaper">true</item>
	</style>
	<style name="AppTheme.Default" parent="AppTheme.Light.Wallpaper">
	</style>
</resources>
